<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryDarkBlue">

    <!-- Botão de voltar no topo esquerdo, sempre visível -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="start|top"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_arrow_back_white_24"
        android:tint="@android:color/white"
        android:contentDescription="Voltar"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:padding="12dp"
        android:clickable="true"
        android:focusable="true"
        android:elevation="8dp"
        android:translationZ="10dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <!-- Header -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp">

                <View
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/circle_white"/>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_menu"
                    android:tint="@color/primaryDarkBlue"/>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚙️ Configurações do Servidor"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="32dp"/>

            <!-- Server Configuration Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🌐 Configuração de Rede"
                        android:textColor="@color/primaryDarkBlue"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IP do Servidor:"
                        android:textColor="@color/primaryDarkBlue"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"/>

                    <EditText
                        android:id="@+id/editServerHost"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_edittext"
                        android:padding="12dp"
                        android:hint="Ex: 192.168.1.100"
                        android:inputType="text"
                        android:textSize="16sp"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Porta:"
                        android:textColor="@color/primaryDarkBlue"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"/>

                    <EditText
                        android:id="@+id/editServerPort"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_edittext"
                        android:padding="12dp"
                        android:hint="8080"
                        android:inputType="number"
                        android:textSize="16sp"
                        android:layout_marginBottom="16dp"/>

                    <!-- Status Text -->
                    <TextView
                        android:id="@+id/statusText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ℹ️ Configure o IP e porta do servidor"
                        android:textSize="14sp"
                        android:textColor="@color/primaryDarkBlue"
                        android:layout_marginBottom="16dp"
                        android:padding="8dp"
                        android:background="@drawable/bg_field_rounded"/>

                    <!-- Buttons Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <Button
                            android:id="@+id/btnTest"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/button_gray"
                            android:text="🔗 Testar"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <Button
                            android:id="@+id/btnSave"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/bg_button_blue"
                            android:text="💾 Salvar"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ℹ️ Dicas"
                        android:textColor="@color/primaryDarkBlue"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Para conectar com o PC, use o IP da máquina na rede local\n• Ambos devem estar na mesma rede WiFi\n• Para emulador, teste: 10.0.2.2\n• Para dispositivo físico, use IP do PC (ex: 192.168.1.100)"
                        android:textColor="@color/primaryDarkBlue"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>