<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryDarkBlue"
    android:fitsSystemWindows="false">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="111dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Cabeçalho com foto e informações básicas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_modal_white"
                android:padding="32dp"
                android:layout_marginBottom="24dp">

                <!-- Avatar do usuário -->
                <FrameLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginBottom="16dp">

                    <View
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@drawable/circle_accent" />

                    <TextView
                        android:id="@+id/txt_avatar_inicial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="U"
                        android:textSize="48sp"
                        android:textColor="@color/white"
                        android:textStyle="bold" />
                </FrameLayout>

                <!-- Nome do usuário -->
                <TextView
                    android:id="@+id/txt_nome_usuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome do Usuário"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/primaryDarkBlue"
                    android:layout_marginBottom="8dp" />

                <!-- Email do usuário -->
                <TextView
                    android:id="@+id/txt_email_usuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="usuario@email.com"
                    android:textSize="16sp"
                    android:textColor="@color/darkGray" />
            </LinearLayout>

            <!-- Seção de ações -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_modal_white"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gerenciar Conta"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primaryDarkBlue"
                    android:layout_marginBottom="20dp" />

                <!-- Botão Editar Perfil -->
                <Button
                    android:id="@+id/btn_editar_perfil"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Editar Perfil"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:background="@drawable/button_blue"
                    android:layout_marginBottom="16dp"
                    android:elevation="2dp"
                    android:drawableStart="@drawable/ic_arrow_right"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp" />

                <!-- Divisor -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightGray"
                    android:layout_marginVertical="12dp" />

                <!-- Botão Excluir Conta -->
                <Button
                    android:id="@+id/btn_excluir_conta"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Excluir Conta"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:background="@drawable/button_red"
                    android:elevation="2dp"
                    android:drawableStart="@drawable/ic_close"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp" />

                <!-- Botão Sair -->
                <Button
                    android:id="@+id/btn_sair"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Sair"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:background="@drawable/button_gray"
                    android:elevation="2dp"
                    android:drawableStart="@drawable/ic_logout"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="16dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp" />

                <!-- Aviso sobre exclusão -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⚠️ A exclusão da conta é permanente e todos os dados serão perdidos."
                    android:textSize="12sp"
                    android:textColor="@color/negativeRed"
                    android:layout_marginTop="12dp"
                    android:padding="8dp"
                    android:background="@drawable/bg_warning"
                    android:textAlignment="center" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_gravity="bottom"
        android:background="@color/primaryDarkBlue"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="32dp">

        <ImageView
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="Home"
            android:focusable="true"
            android:padding="4dp"
            android:src="@drawable/ic_home"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/nav_movements"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="Movimentações"
            android:focusable="true"
            android:padding="4dp"
            android:src="@drawable/ic_arrows"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/nav_accounts"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="Contas"
            android:focusable="true"
            android:padding="4dp"
            android:src="@drawable/ic_bank"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/nav_menu"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="Menu"
            android:focusable="true"
            android:padding="4dp"
            android:src="@drawable/ic_menu"
            app:tint="@color/white" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>