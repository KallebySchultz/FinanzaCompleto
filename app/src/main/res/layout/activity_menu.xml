<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryDarkBlue"
    android:fitsSystemWindows="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/primaryDarkBlue">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:layout_gravity="center_horizontal">

            <View
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:background="@drawable/circle_white"/>

            <ImageView
                android:id="@+id/menu_logo"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_gravity="center"
                android:src="@drawable/logo"/>
        </FrameLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="82dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp">

            <View android:layout_width="match_parent" android:layout_height="2dp" android:background="@color/white" />

            <TextView
                android:id="@+id/btnPerfil"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:text="Perfil"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"/>

            <View android:layout_width="match_parent" android:layout_height="2dp" android:background="@color/white" />

            <TextView
                android:id="@+id/btnCategorias"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:text="Categorias"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"/>

            <View android:layout_width="match_parent" android:layout_height="2dp" android:background="@color/white" />

            <TextView
                android:id="@+id/btnSyncServer"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:text="Sincronizar com Servidor"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"/>

            <View android:layout_width="match_parent" android:layout_height="2dp" android:background="@color/white" />

            <TextView
                android:id="@+id/btnSettings"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:text="Configurações"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"/>

            <View android:layout_width="match_parent" android:layout_height="2dp" android:background="@color/white" />

            <TextView
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:text="Sair"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/negativeRed"
                android:gravity="center"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"/>

            <View android:layout_width="match_parent" android:layout_height="2dp" android:background="@color/white" />
        </LinearLayout>

        <Space android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
    </LinearLayout>

    <!-- Painel de categorias flutuante -->
    <FrameLayout
        android:id="@+id/categorias_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:elevation="16dp">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_white"
            android:padding="32dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:elevation="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cadastrar Categoria"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/primaryDarkBlue"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"/>

            <RadioGroup
                android:id="@+id/tipo_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/radio_receita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Receita"
                    android:textColor="@color/primaryDarkBlue"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/radio_despesa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Despesa"
                    android:textColor="@color/primaryDarkBlue"
                    android:layout_marginStart="24dp"/>
            </RadioGroup>

            <EditText
                android:id="@+id/input_nome_categoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome da categoria"
                android:textColor="@color/primaryDarkBlue"
                android:textColorHint="@color/primaryDarkBlue"
                android:background="@drawable/edittext_bg"
                android:layout_marginBottom="16dp"
                android:inputType="textPersonName"/>

            <!-- Botão "Cadastrar" azul -->
            <Button
                android:id="@+id/btn_salvar_categoria"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Cadastrar"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@drawable/button_blue"
                android:layout_marginBottom="12dp"
                android:elevation="2dp"/>

            <!-- Botão "Voltar" cinza abaixo do cadastrar -->
            <Button
                android:id="@+id/btn_voltar_painel"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Voltar"
                android:textColor="@color/primaryDarkBlue"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@drawable/button_gray"
                android:elevation="1dp"/>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_gravity="bottom"
        android:background="@color/primaryDarkBlue"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="32dp">

        <ImageView
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="Home"
            android:focusable="true"
            android:padding="4dp"
            android:src="@drawable/ic_home"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/nav_movements"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="Movimentações"
            android:focusable="true"
            android:padding="4dp"
            android:src="@drawable/ic_arrows"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/nav_accounts"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="Contas"
            android:focusable="true"
            android:padding="4dp"
            android:src="@drawable/ic_bank"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/nav_menu"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="Menu"
            android:focusable="true"
            android:padding="4dp"
            android:src="@drawable/ic_menu"
            app:tint="@color/accentBlue" />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>